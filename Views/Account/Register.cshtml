@model Car_Hire_Services__CHS_.ViewModel.ApplicationUserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-5 m-auto mt-3">
            @if (Model != null)
            {
                if (Model.ErrorResponseOccured)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error Alert:</strong> @Model.ResponseMessage
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                else
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Success Alert:</strong> @Model.ResponseMessage
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

            }


            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Create Account</h3>
                </div>

                <div class="card-body">
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" required>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Enter your Password" required>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Enter your Confirm Password">
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Nationality"></label>
                                    <select id="nationality" asp-items="@(new SelectList(ViewBag.Nationality, "Id", "Name"))" class="form-control" placeholder="Enter Nationality">
                                    </select>
                                </div>
                            </div>
                                  
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="State"></label>
                                    <select id="state"  asp-for="State" class="form-control" placeholder="Enter your State">
                                    </select>
                                </div>

                            </div>



                        </div>
                        <div class="text-center w-25 m-auto">
                            <button type="submit" class="btn btn-primary mt-2 form-control">Submit</button>
                        </div>
                    </form>
                    <p class="mt-3">Already Registered Please <a asp-controller="Account" asp-action="Login">LOGIN</a> </p>
                </div>
            </div>
        </div>
    </div>
</div>





